<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <!-- Console Output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c] %m%n"/>
        </Console>

        <!-- File Output -->
        <File name="File"
              fileName="logs/deskmate.log"
              append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c] %m%n"/>
        </File>

    </Appenders>

    <Loggers>

        <!-- Application Flow Logger -->
        <Logger name="com.deskmate"
                level="info"
                additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- DAO Error Logger -->
        <Logger name="com.deskmate.dao"
                level="error"
                additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

    </Loggers>

</Configuration>
